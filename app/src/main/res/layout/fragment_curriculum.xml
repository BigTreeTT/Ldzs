<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.longten.ldzs.Curriculum.CurriculumFragment"
    android:background="@color/course_bg6"


    >

    <LinearLayout
        android:background="@color/course_bg6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <include
            tools:context="com.longten.ldzs.Curriculum.CurriculumFragment"
            android:background="@color/course_bg6"
            layout="@layout/curriculum_header_header"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/curriculum_header"
            android:background="@color/course_bg6"




            >

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ff878787"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/curriculum_left"
            android:layout_width="25dp"

            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/curriculum_body"


            >

        </android.support.v7.widget.RecyclerView>



    </LinearLayout>


</LinearLayout>
